{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "src/app/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@server/*": [
        "src/server/*"
      ],
      "@client/*": [
        "src/client/*"
      ],
      "@email/*": [
        "email/*"
      ],
      "@schema/*": [
        "dbschema/*"
      ]
    },
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "jsxImportSource": "react"
  }
}