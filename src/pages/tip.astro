---
import SiteLayout from "@layouts/SiteLayout.astro";
import { z } from "zod";

import { createUrl, getUser } from "@server/astroHelpers";
import { hasValidSubscription, k, p } from "@server/db";
import { PayFastParams, createFormFields } from "@server/payfast";
import { createSignedUrl } from "@server/security";
import { getPayfastIntegration, getSubsciptionPlan, isSandbox } from "@server/subscriptionLogic";

const authorIdParam = Astro.url.searchParams.get("authorId");
const authorId = z.coerce.number().parse(authorIdParam);
const author = await p.users.findUniqueOrThrow({ where: { id: authorId } });

const tipAmountParam = Astro.url.searchParams.get("tipAmount");
const tipAmount = z.coerce.number().parse(tipAmountParam);

let customerName = Astro.url.searchParams.get("customerName") ?? "";
let customerEmail = Astro.url.searchParams.get("customerEmail") ?? "";

const user = await getUser(Astro.request);
if (user) {
  customerName = user.name;
  customerEmail = user.email;
}

const invoice = await p.payments_invoice.create({
  data: {
    invoice_date: new Date(),
    customer_name: customerName,
    customer_email: customerEmail,
    user_id: user?.id,
    payments_invoice_item: {
      create: {
        name: "Tip",
        description: "Tip for Author " + author.name,
        product_id: 1,
        cost: tipAmount,
        author_id: author.id,
      },
    },
  },
});

const signedSuccessUrl = createSignedUrl(createUrl("/tip-success"), null, {
  invoice_id: invoice.id,
});

const signedCancelUrl = createSignedUrl(createUrl("/payment-cancelled"), 5, {
  invoice_id: invoice.id,
});

const sandboxEnabled = await isSandbox();

const payfastIntegration = await getPayfastIntegration();
const merchantId = payfastIntegration.merchant_id ?? "";
const merchantKey = payfastIntegration.merchant_key ?? "";
const passPhrase = payfastIntegration.passphrase ?? "";

let data: PayFastParams = {
  amount: tipAmount.toString(),
  item_name: "Visionary Writings Pro Subscription",
  item_description: "Tip for Author " + author.name,
  notify_url: createUrl("/api/payments/notify"),
  cancel_url: signedCancelUrl,
  return_url: signedSuccessUrl,
  name_first: customerName,
  name_last: "",
  email_address: sandboxEnabled ? "test@test.com" : customerEmail,
  m_payment_id: invoice.id.toString(),
  custom_int1: author.id.toString(),
  custom_int2: "1",
  custom_int3: user?.id.toString() ?? "",
  custom_int4: sandboxEnabled ? "1" : "0",
  merchant_id: merchantId.toString(),
  merchant_key: merchantKey,
};

//If user has a cancelled subscription but will still be valid for some time,
//then this new one should start only when that one ends

const payForm = createFormFields(data);
---

<div class="loading">Loading&#8230;</div>
<div set:html={payForm} />

<script defer>
  const paymentForm = document.querySelector("form");
  paymentForm.submit();
</script>

<style lang="scss">
  /* Absolute Center Spinner */
  .loading {
    position: fixed;
    z-index: 999;
    height: 2em;
    width: 2em;
    overflow: show;
    margin: auto;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
  }

  /* Transparent Overlay */
  .loading:before {
    content: "";
    display: block;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(rgba(20, 20, 20, 0.8), rgba(0, 0, 0, 0.8));

    background: -webkit-radial-gradient(rgba(20, 20, 20, 0.8), rgba(0, 0, 0, 0.8));
  }

  /* :not(:required) hides these rules from IE9 and below */
  .loading:not(:required) {
    /* hide "loading..." text */
    font: 0/0 a;
    color: transparent;
    text-shadow: none;
    background-color: transparent;
    border: 0;
  }

  .loading:not(:required):after {
    content: "";
    display: block;
    font-size: 10px;
    width: 1em;
    height: 1em;
    margin-top: -0.5em;
    -webkit-animation: spinner 150ms infinite linear;
    -moz-animation: spinner 150ms infinite linear;
    -ms-animation: spinner 150ms infinite linear;
    -o-animation: spinner 150ms infinite linear;
    animation: spinner 150ms infinite linear;
    border-radius: 0.5em;
    -webkit-box-shadow: rgba(255, 255, 255, 0.75) 1.5em 0 0 0,
      rgba(255, 255, 255, 0.75) 1.1em 1.1em 0 0, rgba(255, 255, 255, 0.75) 0 1.5em 0 0,
      rgba(255, 255, 255, 0.75) -1.1em 1.1em 0 0, rgba(255, 255, 255, 0.75) -1.5em 0 0 0,
      rgba(255, 255, 255, 0.75) -1.1em -1.1em 0 0, rgba(255, 255, 255, 0.75) 0 -1.5em 0 0,
      rgba(255, 255, 255, 0.75) 1.1em -1.1em 0 0;
    box-shadow: rgba(255, 255, 255, 0.75) 1.5em 0 0 0, rgba(255, 255, 255, 0.75) 1.1em 1.1em 0 0,
      rgba(255, 255, 255, 0.75) 0 1.5em 0 0, rgba(255, 255, 255, 0.75) -1.1em 1.1em 0 0,
      rgba(255, 255, 255, 0.75) -1.5em 0 0 0, rgba(255, 255, 255, 0.75) -1.1em -1.1em 0 0,
      rgba(255, 255, 255, 0.75) 0 -1.5em 0 0, rgba(255, 255, 255, 0.75) 1.1em -1.1em 0 0;
  }

  /* Animation */

  @-webkit-keyframes spinner {
    0% {
      -webkit-transform: rotate(0deg);
      -moz-transform: rotate(0deg);
      -ms-transform: rotate(0deg);
      -o-transform: rotate(0deg);
      transform: rotate(0deg);
    }
    100% {
      -webkit-transform: rotate(360deg);
      -moz-transform: rotate(360deg);
      -ms-transform: rotate(360deg);
      -o-transform: rotate(360deg);
      transform: rotate(360deg);
    }
  }
  @-moz-keyframes spinner {
    0% {
      -webkit-transform: rotate(0deg);
      -moz-transform: rotate(0deg);
      -ms-transform: rotate(0deg);
      -o-transform: rotate(0deg);
      transform: rotate(0deg);
    }
    100% {
      -webkit-transform: rotate(360deg);
      -moz-transform: rotate(360deg);
      -ms-transform: rotate(360deg);
      -o-transform: rotate(360deg);
      transform: rotate(360deg);
    }
  }
  @-o-keyframes spinner {
    0% {
      -webkit-transform: rotate(0deg);
      -moz-transform: rotate(0deg);
      -ms-transform: rotate(0deg);
      -o-transform: rotate(0deg);
      transform: rotate(0deg);
    }
    100% {
      -webkit-transform: rotate(360deg);
      -moz-transform: rotate(360deg);
      -ms-transform: rotate(360deg);
      -o-transform: rotate(360deg);
      transform: rotate(360deg);
    }
  }
  @keyframes spinner {
    0% {
      -webkit-transform: rotate(0deg);
      -moz-transform: rotate(0deg);
      -ms-transform: rotate(0deg);
      -o-transform: rotate(0deg);
      transform: rotate(0deg);
    }
    100% {
      -webkit-transform: rotate(360deg);
      -moz-transform: rotate(360deg);
      -ms-transform: rotate(360deg);
      -o-transform: rotate(360deg);
      transform: rotate(360deg);
    }
  }
</style>
